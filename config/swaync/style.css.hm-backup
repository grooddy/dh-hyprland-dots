/* 1. Цвета и Шрифты */
@import "../../.cache/matugen/colors-waybar.css";

* {
    color: @text;
    font-family: "SF Pro Display", "Inter", sans-serif;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

/* 2. Главное окно — Монолитное стекло */
.control-center {
    background: alpha(@surface, 0.25); /* Тот самый коэффициент из Waybar */
    border-radius: 24px;
    border: 1px solid alpha(@outline, 0.08);
    border-top: 1px solid alpha(@surface_bright, 0.4); /* Rim lighting */
    margin: 10px;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
}

.control-center-list {
    background: transparent;
}

/* 3. Виджеты (Плеер, Громкость, Сетка) */
.widget-buttons-grid,
.widget-volume,
.widget-mpris,
.widget-title {
    background: alpha(@text, 0.03);
    border-radius: 20px;
    margin: 8px 16px;
    padding: 14px;
    border: 1px solid alpha(@outline, 0.05);
}

/* --- СЕТКА КНОПОК --- */
.widget-buttons-grid button {
    background: alpha(@text, 0.05);
    border-radius: 16px;
    margin: 5px;
    min-height: 55px;
    color: @text;
}

.widget-buttons-grid button:hover {
    background: alpha(@text, 0.12);
}

.widget-buttons-grid button:checked {
    background: @text;
    color: @surface;
}

/* --- СЛАЙДЕР ГРОМКОСТИ --- */
.widget-volume scale trough {
    background: alpha(@text, 0.1);
    border-radius: 100px;
    min-height: 12px;
}

.widget-volume scale highlight {
    background: @text;
    border-radius: 100px;
}

/* --- УВЕДОМЛЕНИЯ --- */
.notification {
    background: alpha(@text, 0.16);
    border-radius: 20px;
    margin: 10px 0 50px 20px;
    border: 1px solid alpha(@outline, 0.1);
    border-top: 1px solid alpha(@surface_bright, 0.5);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}
.notification:hover {
    background: alpha(@text, 0.16);
}
.notification-content {
    padding: 10px;
}
.notification-default-action {
    border-radius: 20px;
    padding: 10px;
    background: transparent;
}
.notification-group {
    background: transparent;
}
.notification-group-headers {
    background: transparent;
}

.notification-default-action:hover {
    /*background: alpha(@text, 0.04);*/
}

.summary {
    font-size: 14px;
    font-weight: 700;
    color: @text;
}

.body {
    font-size: 13px;
    color: alpha(@text, 0.7);
}

/* Плеер (MPRIS) */
.widget-mpris {
    background: alpha(@surface_bright, 0.1); /* Выделяем плеер мягко */
}

.widget-mpris-title {
    font-size: 15px;
    font-weight: 700;
    color: @text;
}
/* ЗАГОЛОВОК */
.widget-title {
    margin: 20px 20px 10px 20px;
}
.widget-title > label {
    font-size: 16px;
    font-weight: 700;
    color: @text;
    letter-spacing: 0.5px;
}
.widget-mpris-subtitle {
    font-size: 13px;
    color: alpha(@text, 0.6);
}
/* Кнопки плеера */
.widget-mpris-player > box > button {
    background: alpha(@on_primary_container, 0.1);
    border-radius: 100px;
    min-width: 34px;
    min-height: 34px;
}

/* Заголовки */
.widget-title > label {
    font-size: 18px;
    font-weight: 800;
    color: @text;
}
.widget-title button {
    background: alpha(@text, 0.05);
    color: alpha(@text, 0.8);
    padding: 5px 14px;
    font-size: 12px;
    border-radius: 12px;
}

.widget-title button:hover {
    background: alpha(@text, 0.1);
    color: @text;
}

/* Закрытие уведомлений */
.close-button {
    background: alpha(@error, 0.1);
    color: @error;
    margin: 8px;
    border-radius: 100px;
}
.close-button:hover {
    background: alpha(
        @error,
        0.15
    ); /* Мягкий красный фон при наведении */ /* Иконка становится четкой и акцентной */
    /* Легкое свечение, сигнализирующее о действии удаления */
    box-shadow: 0 0 10px alpha(@error, 0.2);
}

.close-button:active {
    background: alpha(@error, 0.3);
    transform: scale(0.92); /* Эффект физического нажатия */
}
#widget-system-status {
    background: alpha(@surface_container_high, 0.5);
    border-radius: 14px;
    margin: 10px 14px;
    padding: 12px;
}

#widget-system-status > label {
    font-size: 14px;
    font-weight: 700;
    color: @primary; /* Текст будет акцентного цвета */
}
