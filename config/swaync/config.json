{
  "$schema": "/etc/swaync/config.schema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "cssPriority": "application",
  "control-center-width": 350,
  "control-center-height": 1024,
  "control-center-margin-top": 12,     /* Маленький зазор от Waybar */
  "control-center-margin-bottom": 12, /* Симметрия с gaps_out */
  "control-center-margin-right": 12,  /* Симметрия с gaps_out */
  "widgets": [
    "buttons-grid",
    "mpris",
    "volume",
    "title",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Уведомления",
      "clear-all-button": true,
      "button-text": "󰎟"
    },
    "volume": {
      "label": "󰕾",
      "show-per-app": true
    },
    "buttons-grid": {
      "actions": [
        { "label": "󰖩", "command": "nm-connection-editor" },
        { "label": "󰂯", "command": "blueman-manager" },
        { "label": "󰖔", "command": "bash $HOME/.config/hypr/scripts/theme-switch.sh" },
        { "label": "󰕮", "command": "hyprpicker -a" },
        { "label": "󰢮", "command": "bash $HOME/.config/hypr/scripts/gpu-switch.sh" },
        { "label": "󰈐", "command": "bash $HOME/.config/hypr/scripts/asus-power.sh" },
        { "label": "󰐥", "command": "wlogout" },
        { "label": "  󰐽  \nЭкран", "command": "bash /home/dh/.config/hypr/scripts/refresh-switch.sh" },
        { "label": "  󰖔  \nТема", "command": "bash /home/dh/.config/hypr/scripts/theme-switch.sh" },
        { "label": "  󰸉  \nОбои", "command": "bash /home/dh/.config/hypr/scripts/change_wallpaper.sh" }

      ]
    },
    "mpris": {
      "image-size": 80,
      "image-radius": 15
    },
    "notifications": {
       "label": "Уведомления"
    }
  }
}