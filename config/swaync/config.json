{
  "$schema": "/etc/swaync/config.schema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "cssPriority": "application",
  "control-center-width": 350,
  "control-center-height": 1000,
  "control-center-margin-top": 12,
  "control-center-margin-bottom": 12,
  "control-center-margin-right": 12,
  "widgets": [
    "buttons-grid",
    "mpris",
    "volume",
    "title",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Уведомления",
      "clear-all-button": true,
      "button-text": "󰎟"
    },
    "volume": {
      "label": "󰕾",
      "show-per-app": true
    },
    "buttons-grid": {
      "actions": [
        { "label": "󰖩", "command": "nm-connection-editor" },
        { "label": "󰂯", "command": "blueman-manager" },
        { "label": "󰖔", "command": "nohup bash $HOME/.config/hypr/scripts/theme-switch.sh & disown" },
        { "label": "󰕮", "command": "hyprpicker -a" },
        { "label": "󰢮", "command": "bash $HOME/.config/hypr/scripts/gpu-switch.sh & disown" },
        { "label": "󰈐", "command": "bash $HOME/.config/hypr/scripts/asus-power.sh & disown" },
        { "label": "󰐽", "command": "bash $HOME/.config/hypr/scripts/refresh-switch.sh & disown" },
        { "label": "󰸉", "command": "nohup bash $HOME/.config/hypr/scripts/change_wallpaper.sh & disown" },
        { "label": "󰐥", "command": "wlogout" }
      ]
    },
    "mpris": {
      "image-size": 80,
      "image-radius": 12
    },
    "notifications": {
       "label": "Уведомления"
    }
  }
}