{
  "$schema": "/etc/swaync/config.schema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "transition-duration": 400,
  "cssPriority": "application",
  "control-center-width": 380,
  "control-center-height": 800,
  "control-center-margin-top": 0,
  "control-center-margin-right": 10,

  "widgets": [
    "buttons-grid",
    "mpris",
    "volume",
    "title",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Центр управления",
      "clear-all-button": true,
      "button-text": "󰎟 Очистить"
    },
    "volume": {
      "label": "󰕾",
      "show-per-app": true
    },
    "buttons-grid": {
      "actions": [
        { "label": "󰖩", "command": "rofi-network-manager" },
        { "label": "󰂯", "command": "rofi-bluetooth -theme macos" },
        { "label": "󰖔", "command": "sh -c /home/dh/.config/hypr/scripts/mode-switch.sh" },
        { "label": "󰕮", "command": "hyprpicker -a" },
        { "label": "󰢮", "command": "sh -c /home/dh/.config/hypr/scripts/gpu-switch.sh" },
        { "label": "󰈐", "command": "sh -c /home/dh/.config/hypr/scripts/asus-power.sh" },
        { "label": "󰸉", "command": "sh -c /home/dh/.config/hypr/scripts/wallpaper-change.sh" },
        { "label": "Hz", "command": "sh -c /home/dh/.config/hypr/scripts/refresh-switch.sh" },
        { "label": "󰐥", "command": "wlogout" }
      ]
    },
    "mpris": {
      "image-size": 100,
      "image-radius": 14
    },
    "notifications": {
       "label": "Уведомления"
    }
  }
}
